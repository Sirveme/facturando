[phases.setup]
nixPkgs = [
    "python312",
    "gcc",
    "pango",
    "fontconfig",
    "gdk-pixbuf",
    "cairo",
    "gobject-introspection",
    "glib",
    "harfbuzz",
    "freetype",
    "zlib"
]

[phases.install]
cmds = ["pip install -r requirements.txt"]

[start]
cmd = "uvicorn src.main:app --host 0.0.0.0 --port $PORT"
